from numpy import append
import pandas as pd
from torch import less

# get data, replace quotation with path to data
df = pd.read_csv('../data/labeled_patient_dataset_(1).csv')

# drop non-numerical data
numerical_cols = []

for i in df.columns:
    if df.dtypes[i] in ['int64', 'float64']:
        numerical_cols.append(i)

df_numerical = df[numerical_cols]

# drop columns with > 33% null
less_than_33_pct_null = []

pct_null = df_numerical.isnull().sum() / len(df)

for i in df_numerical.columns:
    if pct_null[i] <= 1/3:
        less_than_33_pct_null.append(i)

df_less_than_33_pct_null = df[less_than_33_pct_null]


print('original: ' + str(len(df.columns)) + '\nnumerical only: ' + str(len(df_numerical.columns)) + '\n< 33% null only: ' + str(len(df_less_than_33_pct_null.columns)))